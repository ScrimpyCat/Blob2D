(gui "gui-slider"
    (enum!
        "&normal"
        "&highlighted"
        "&pushed"
    )

    (state! ".value" 0.5)
    (state! ".min-value" 0.0)
    (state! ".max-value" 1.0)
    (state! ".colour" (195 205 209))
    (state! ".thumb-colour" (quote (lighten .colour 9)))
    (state! ".min-colour" (quote .colour))
    (state! ".max-colour" (quote (hue-invert .colour))) ;todo: implement
    (state! ".thumb-center" (quote (/ (+ .value (- 0.0 .min-value)) (+ .max-value (- 0.0 .min-value)))))
    (state! ".min-rect" (quote (.x .y (* .width .thumb-center) .height)))
    (state! ".max-rect" (quote ((+ .x (* .width .thumb-center)) .y (- .width (* .width .thumb-center)) .height)))
    (state! ".thumb-size" (quote (15 (- .height 4))))
    (state! ".thumb-rect" (quote ((+ .x (- (* .width .thumb-center) (/ (get 0 .thumb-size) 2))) (+ .y (/ (- .height (get 1 .thumb-size)) 2)) (get 0 .thumb-size) (get 1 .thumb-size))))
    (state! ".radius" (quote (/ 8.0 (max .width .height))))
    (state! ".thumb-radius" (quote (/ 6.0 (max (get 0 .thumb-size) (get 1 .thumb-size)))))
    (state! ".status" &normal)
    (state! ".outline" 5)
    (state! ".bar" (quote ( ;todo: proper bar
        (quote (
            (quote (render-rect .rect .min-colour (radius: .radius)))
            (quote (render-rect .thumb-rect .thumb-colour (radius: .thumb-radius)))
        )) ; &normal
        (quote (
            (quote (render-rect .rect .min-colour (radius: .radius)))
            (quote (render-rect .thumb-rect .thumb-colour (radius: .thumb-radius)))
        )) ; &highlighted
        (quote (
            (quote (render-rect .rect .min-colour (radius: .radius)))
            (quote (render-rect .thumb-rect .thumb-colour (radius: .thumb-radius)))
        )) ; &pushed
    )))
    (state! ".on-click" (quote (print "Clicked!")))
    (state! ".on-change")
    (state! ".step" #f)
    (state! ".interval" (quote (.value! (round .value))))
    (state! ".inside" #f)
    (state! ".dragged" #f)

    (render:
        (unquote (get .status .bar))
    )

    (control:
        (on (click: :left .rect)
            (if @press
                ((.status! &pushed) (.inside! #t) (.dragged! #t))
                ((.status! &highlighted) (if .inside .on-click) (.inside! #f) (.dragged! #f))
            )
            ((.status! &normal) (if .inside .on-click) (.inside! #f) (.dragged! @press))
        )
        (if .dragged
            (if .inside (on (cursor: .rect)
                ((.status! &pushed) (.value! (- (* (min (max (/ (+ @pos-x (- 0.0 .x)) (+ .width (- 0.0 .x))) 0.0) 1.0) (+ (- 0.0 .min-value) .max-value)) (- 0.0 .min-value))) (if .step .interval) .on-change)
                ((.status! &highlighted) (.value! (- (* (min (max (/ (+ @pos-x (- 0.0 .x)) (+ .width (- 0.0 .x))) 0.0) 1.0) (+ (- 0.0 .min-value) .max-value)) (- 0.0 .min-value))) (if .step .interval) .on-change)
            ))
            (on (cursor: .rect) (.status! &highlighted) (.status! &normal))
        )
    )
)
